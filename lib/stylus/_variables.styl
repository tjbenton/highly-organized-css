$colors = {
  'darkgray': #1b2b34,
  'teal': #009688,
  'red': #eb606b,
  'orange': #f99157,
  'yellow': #fac863,
  'green': #99c794,
  'blue': #6699cc,
  'purple': #c594c5,
  'brown': #ab7967
}

// Override theme settings (see ../template/settings.scss)
$backgroundColor = $colors.darkgray

$mainColor = #fff
