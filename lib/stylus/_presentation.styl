a
  color: $colors.teal;
  &:hover, &:focus
    color: lighten($colors.teal, 20%);
  &:active
    color: darken($colors.teal, 20%);

button:focus
  outline none


section.has-light-background
  &, h1, h2, h3, h4, h5, h6
    color #222

h1, h2, h3, h4, h5, h6
  text-transform initial
  code:not(.hljs)
    line-height 1.2em
    position relative
    top -0.15em



pre
  width auto

code:not(.hljs)
  font 0.75em/1.45em 'Source Code Pro'
  display inline-block
  color: $colors.red;
  background-color: rgba(lighten($colors.red, 80%), 0.9);
  border-radius 0.15em
  padding 0 0.15em
  white-space pre-wrap

table
  border-collapse collapse
  margin auto
  border-spacing 0px

  th, td
    text-align center
    padding 0.2em 0.5em
    border-bottom 1px solid

  th
    font-weight bold

  tr:last-child td
    border-bottom: none;

small
  display inline-block
  font-size 0.6em
  line-height 1.2em
  vertical-align top


.c-specificity
  background rgba(white, 0.12)
  perspective 400px
  // width 70%
  &__top,
  &__side
    border-bottom 3px solid white

  &__top
    margin 0 auto
    width 375px

  &__side
    transform rotate(-90deg) translate(-46%, -109%)
    width 68%

  &__img
    background none
    border 0
    box-shadow none
    margin -55px 0 0

body
  counter-reset extraneous

.slide-background.is-extraneous
  display block !important
  // opacity 0
  counter-increment extraneous
  $size = 100px
  &:after, &:before
    top 0
    right 0
    position absolute

  &:before
    border-left $size solid transparent
    border-top: $size solid $colors.teal;
    content ''
    height 0
    width 0

  &:after
    content counter(extraneous)
    padding 10px 20px 0 0
    text-align right
